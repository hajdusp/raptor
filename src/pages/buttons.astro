---
import Layout from '../layouts/Layout.astro';
// Buttons page showcasing different button styles
---

<Layout>
    <h1>Buttons</h1>
    <h2>Basic buttons</h2>
    <div class="buttons-demo">
        <button>Button</button>
        <button class="button-outline">Outlined</button>
        <button class="button-transparent">Transparent</button>
        <button disabled>Disabled</button>
    </div>
    <h2>Buttons with icons</h2>
    <div class="buttons-demo">
        <button class="button-outline"><span class="material-icons">pie_chart</span>With Icon</button>
        <button class="button-icon-only"><span class="material-icons">menu</span></button>
        <button class="button-outline button-icon-only"><span class="material-icons">menu</span></button>
        <button class="button-transparent button-icon-only"><span class="material-icons">menu</span></button>
    </div>

</Layout>

<style>
    .buttons-demo {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 3rem;
    }
</style>


